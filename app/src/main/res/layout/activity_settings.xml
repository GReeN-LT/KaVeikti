<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.agobal.KaVeikti.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="219dp"
        android:layout_height="203dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="37dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintBottom_toTopOf="@+id/settings_display_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Display Name"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/settings_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_image" />

    <TextView
        android:id="@+id/settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:text="Hi, there I'm using KaVeikti app"
        app:layout_constraintBottom_toTopOf="@+id/settings_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_display_name" />

    <Button
        android:id="@+id/settings_status_button"
        android:layout_width="139dp"
        android:layout_height="52dp"
        android:layout_marginBottom="43dp"
        android:background="@color/colorAccent"
        android:text="Change Status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_image_button" />

    <Button
        android:id="@+id/settings_image_button"
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:text="Change Image"
        app:layout_constraintBottom_toTopOf="@+id/settings_status_button"
        app:layout_constraintEnd_toEndOf="@+id/settings_status"
        app:layout_constraintTop_toBottomOf="@+id/settings_status" />

</android.support.constraint.ConstraintLayout>
