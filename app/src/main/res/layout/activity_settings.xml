<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.agobal.KaVeikti.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="219dp"
        android:layout_height="203dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="37dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintBottom_toTopOf="@+id/settings_display_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/settings_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Display Name"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/settings_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_image" />

    <TextView
        android:id="@+id/settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:text="Hi, there I'm using KaVeikti app"
        app:layout_constraintBottom_toTopOf="@+id/settings_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_display_name" />

    <Button
        android:id="@+id/settings_status_button"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:background="@color/colorAccent"

        android:text="Change Status"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="437dp" />

    <Button
        android:id="@+id/settings_image_button"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Change Image"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="389dp" />

</android.support.constraint.ConstraintLayout>
